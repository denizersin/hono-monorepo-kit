{
  "name": "@repo/backend",
  "version": "0.1.0",
  "private": true,
  "exports": {
    "./exports": "./src/exports/exports.ts"
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev2": "tsc --watch & tsx watch src",
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:dump": "tsx ./src/modules/infrastructure/database/scripts/db-dump.ts",
    "db:backup": "tsx ./src/modules/infrastructure/database/scripts/db-backup.ts",
    "db:drizzle-studio": "npx drizzle-kit studio",
    "initialize-db": "tsx ./src/modules/infrastructure/database/scripts/initialize-db.ts",
    "initialize-new-look-up": "tsx ./src/modules/infrastructure/database/scripts/initialize-new-look-up.ts",
    "update-db": "bun run db:generate && sleep 1 && bun run db:migrate",
    "reset-db-step1": "tsx ./src/modules/infrastructure/database/scripts/re-create-db.ts",
    "reset-db-step2": "rm -rf ./src/modules/infrastructure/database/migrations && bun run update-db && bun run initialize-db ",
    "drizzle-studio": "npx drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@hono/node-ws": "^1.1.0",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-validator": "^0.4.3",
    "@repo/jobs": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/shared": "workspace:*",
    "@trpc/server": "^11.4.4",
    "@types/jsonwebtoken": "^9.0.9",
    "bull": "^4.16.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.0",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.1.2",
    "hono-rate-limiter": "0.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "superjson": "^2.2.2",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/bull": "^4.10.4",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.0.0",
    "ioredis": "^5.8.2",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2"
  }
}