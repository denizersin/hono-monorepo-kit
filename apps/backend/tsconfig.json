{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    // "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    // "isolatedModules": true,
    "target": "ESNext",
    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@server/*": [
        "src/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      

    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },

}