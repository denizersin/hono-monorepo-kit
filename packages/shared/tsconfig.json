{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    //error aliyorduk yoruma aldik!
    // "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "#/*": [
        "./*.ts"
      ],
    },
    "composite": true,
    "lib": [
      "es2022"
    ],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "references": [
    {
      "path": "../../apps/backend"
    }
  ],
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
}