{
  "name": "@repo/jobs",
  "version": "1.0.0",
  "description": "Background job processing with Bull and Redis",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "rm -rf dist && tsc --watch",
    "build": "rm -rf dist && tsc",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "keywords": [
    "bull",
    "redis",
    "queue",
    "jobs",
    "background-jobs"
  ],
  "dependencies": {
    "bull": "^4.12.0",
    "redis": "^4.6.0",
    "@repo/logger": "workspace:*"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  }
}
