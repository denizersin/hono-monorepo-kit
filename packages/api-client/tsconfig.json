{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "rootDir": "src",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,

    "paths": {
      "@server/*": [
        "../../apps/backend/src/*"
      ],
    },
    // "typeRoots": ["./node_modules/@types", "./node_modules/@cloudflare"],
    // "types": ["workers-types/2023-07-01", "node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/apps/web"],
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../apps/backend"
    }
  ]
}
