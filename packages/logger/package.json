{
  "name": "@repo/logger",
  "version": "1.0.0",
  "description": "Shared logger utility using Winston",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "rm -rf dist && tsc --watch",
    "build": "rm -rf dist && tsc",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "logger",
    "winston",
    "logging"
  ],
  "dependencies": {
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.9.2"
  }
}

